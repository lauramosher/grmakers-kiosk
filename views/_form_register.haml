%form.form-horizontal{:action => "/register", :method => :post}
  %fieldset
    .control-group
      .control-label{:for => "email"} Email
      .controls
        %input#email{:placeholder => "Email Address", :type => :text, :required => true}
    .control-group
      .control-label{:for => "password"} Password
      .controls
        %input#password{:placeholder => "Password", :type => :password, :required => true}
    .control-group
      .control-label{:for => "cpassword"} Confirm Password
      .controls
        %input#cpassword{:placeholder => "Confirm Password", :type => :password, :required => true}
    .control-group
      .controls
        %input#submit.btn.btn-primary.pull-right{:type => :submit, :value => "Register"}
