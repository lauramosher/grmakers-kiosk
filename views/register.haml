%form.form-horizontal{:action => "/register", :method => :post}
  %fieldset
    %legend= @title
    .control-group
      .control-label{:for => "email"} Email
      .controls
        %input#email{:placeholder => "Email Address", :type => :text, :required => true}
    .control-group
      .control-label{:for => "username"} Username
      .controls
        %input#username{:placeholder => "Desired Username", :type => :text, :required => true}
    .control-group
      .control-label{:for => "password"} Password
      .controls
        %input#password{:placeholder => "Password", :type => :password, :required => true}
    .control-group
      .controls
        %input#submit.btn.btn-large{:placeholder => "Submit", :type => :submit, :value => "Register"}